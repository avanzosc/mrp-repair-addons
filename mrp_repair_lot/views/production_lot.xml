<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="stock_production_lot_view_form" model="ir.ui.view">
            <field name="name">stock.production.lot.form</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form" />
            <field name="arch" type="xml">
                <div class="oe_button_box oe_right" position="inside">
                    <button class="oe_inline oe_stat_button"
                            name="%(mrp_repair_lot.mrp_repair_action)d"
                            icon="fa-gear" type="action">
                        <field string="Repair orders" name="repairs_count"
                               widget="statinfo" />
                    </button>
                </div>
            </field>
        </record>
    </data>
</openerp>

