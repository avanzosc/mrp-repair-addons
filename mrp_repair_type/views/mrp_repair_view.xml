<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_repair_order_form" model="ir.ui.view">
        <field name="name">repair.order.form</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form" />
        <field name="arch" type="xml">
            <field name="product_id" position="before">
                <field name="repair_type_id" />
            </field>
        </field>
    </record>

    <record id="view_repair_type_tree" model="ir.ui.view">
        <field name="name">repair.order.type.tree</field>
        <field name="model">repair.order.type</field>
        <field name="arch" type="xml">
            <tree string="Repair order type" editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>


    <record id="view_repair_order_form_filter" model="ir.ui.view">
        <field name="name">repair.order.form.filter</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form_filter" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="repair_type_id" />
            </field>
            <!-- <filter name="company" position="before">
                <filter string="Repair type" domain="[]" context="{'group_by':'repair_type_id'}" />
            </filter> -->
        </field>
    </record>

    <record id="repair_type_action" model="ir.actions.act_window">
        <field name="name">Repair type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">repair.order.type</field>
        <field name="view_id" ref="view_repair_type_tree" />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new repair order type.
            </p>
        </field>
    </record>

    <menuitem action="repair_type_action" id="menu_repair_type_config" name="Repair type"
        parent="mrp.menu_mrp_configuration" />
</odoo>